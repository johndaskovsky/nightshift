{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {},

  // Global permissions for tools and MCP integrations
  "permission": {
    // File editing permissions
    "edit": "allow",

    // Bash command permissions (pattern-based)
    "bash": {
      "*": "ask",
      "mkdir*": "allow",
      "test*": "allow",
      "cat*": "allow",
      "head*": "allow",
      "xargs*": "allow",
      "curl*": "allow",
      "openspec list*": "allow",
    },

    // Web fetch permissions
    "webfetch": "allow",
  },
}
